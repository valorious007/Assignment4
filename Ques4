#include <stdio.h>

int main() {
    int n;
    int factorial = 1; 

    printf("Enter an integer between 1 to 16: ");
    scanf("%d", &n);

    if (n < 0) 
    {
        printf("Error! Factorial of a this number doesn't exist.\n");
    } 
    else 
    {
        for (int i = 1; i <= n; ++i) 
        {
            factorial = factorial * i;
        }
        printf("Factorial of %d = %d\n", n, factorial);
    }
    return 0;
}
